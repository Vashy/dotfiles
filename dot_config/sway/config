# -----------
# Gaming
# -----------
# reduce input lag
output * allow_tearing yes

# Prevents the screen from turning off while you're playing with a controller
for_window [class=".*"] inhibit_idle fullscreen

# Reduces the compositor's frame-pacing overhead for games.
for_window [class=".*"] max_render_time off

# move position 0 0,
# bindsym $mod+g floating enable, border none, resize set 2560 1440
# bindsym $mod+Shift+g floating enable, border none, move absolute position 0 0, resize set 2560 1440, inhibit_idle focus
bindsym $mod+Shift+g floating enable, border none, move position 0 0, inhibit_idle focus
# Toggle between tiled-with-bar and fullscreen-borderless
# bindsym $mod+g floating disable, border normal, fullscreen disable

# Make all gamescope windows float and remove borders
# for_window [app_id="gamescope"] floating enable, border none, inhibit_idle focus
# for_window [title="(?i)Mewgenics.*"] floating enable, border none, move position 0 0, inhibit_idle focus
for_window [title="Learn OpenGL"] floating enable, move position center

